{
  "name": "vl-ui-description-data",
  "version": "1.0.0",
  "description": "Gebruik de description data component om meer informatie te geven over de inhoud op de pagina, bvb over een contactpersoon, een entiteit of een publicatie.",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "test:unit:chrome": "wct -p -l chrome --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-description-data.js -- *.src.js",
    "release:prepare:imports": "replace '/node_modules/vl-ui-core/vl-core.src.js' '/node_modules/vl-ui-core/vl-core.js' vl-description-data.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-description-data/style.css' vl-description-data.js",
    "release:prepare:commit": "git add -f vl-description-data.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-description-data.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-description-data/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-description-data#readme",
  "dependencies": {
    "vl-ui-core": "^3.0.0"
  },
  "devDependencies": {
    "@govflanders/vl-ui-util": "^3.9.1",
    "@govflanders/vl-ui-description-data": "^3.9.1",
    "vl-ui-grid": "^1.1.0",
    "http-server": "0.11.1",
    "np": "3.0.4",
    "uglify-js-es6": "2.8.9",
    "vl-ui-util": "^2.0.0",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2",
    "replace": "^1.1.1"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
